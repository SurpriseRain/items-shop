/****店铺首页头部****/
.logo img{ float:left;}
.logo img.img_spec{ margin-left:20px; float:left;}
.logo h1{ height:60px; line-height:60px; margin:10px 0 10px 30px; font-weight:100; color:#666; font-size:25px; float:left;}


/****店铺首页楼层****/
.shop_flo{padding:10px 0 10px 0; border-top:1px solid #4f4f4f; position:relative; margin-top:70px;}
span.shop_title{ position:absolute; margin-left:-4.2%; left:50%; top:-40px; height:39px; line-height:39px; font-size:20px; border-bottom:4px solid #4f4f4f; text-align:center;}
span.shop_title:hover{ cursor:pointer; color:#FF4A00}

.shop_flo .shop_abv{ height:485px; background:url(../../images/floor_adve.png); margin-top:5px;}
.shop_flo ul li{ padding:5px; cursor:pointer;}
.shop_flo ul li.resp:hover{ padding:0;}
.shop_flo ul li.resp .cov:hover{box-shadow:0 0 10px #999; border:0;}
.shop_flo ul li .cov{ border:1px solid #eee;}
.shop_flo ul li .shop_mes span.shop_name{ font-size:20px; margin:30px 0 5px 20px;}
.shop_flo ul li .shop_mes span.shop_des{ font-size:18px; color:#999; margin:0 0 5px 20px;}
.shop_flo ul li .shop_mes span.shop_pic{ font-size:15px;color:#FF4A00; margin:0 0 5px 20px;}
.shop_flo ul li .shop_img{ margin:8px 10px;}


.shop_flo ul li .comm_img{ padding:8px 37px;}
.shop_flo ul li span.comm_name{ font-size:15px; margin-top:5px; text-align:center;}
.shop_flo ul li span.comm_des{ font-size:15px; color:#999; margin-top:5px; text-align:center;}
.shop_flo ul li span.comm_pic{ font-size:13px;color:#FF4A00; margin-top:5px; text-align:center; margin-bottom:8px;}
.shop_flo ul li span.spec_pic{ font-size:13px; margin-top:10px; text-align:center; margin-bottom:8px;}
.shop_flo ul li span.spec_pic em{ font-size:20px;}
.shop_flo ul li input.comm_but{float:right; margin-right:10px; padding:5px 0;}

